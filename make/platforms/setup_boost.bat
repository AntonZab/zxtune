@ECHO OFF

SET | FIND "BOOST_VERSION" > NUL && GOTO NoDefBoost
FOR /F %%V in (%BUILD_TOOLS_DIR%\boost-%TOOLSET%-%BUILD_ARCH%) DO SET BOOST_VERSION=%%V
ECHO Using boost version %BOOST_VERSION%
:NoDefBoost

SET BOOST_DIR=%BUILD_TOOLS_DIR%\boost-%BOOST_VERSION%-%TOOLSET%-%BUILD_ARCH%

ECHO %LIB% | FIND "%BOOST_DIR%" > NUL && GOTO Quit

SET LIB=%BOOST_DIR%\lib;%LIB%
SET INCLUDE=%BOOST_DIR%;%INCLUDE%
:Quit
